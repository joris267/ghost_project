<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.joris_schefold.ghost.SettingsScreen">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goBackButton"
        android:onClick="goBack"
        android:text="Back"
        android:layout_below="@+id/goBackButton"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerContainer"
        android:layout_below="@+id/goBackButton"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Language: "
            android:id="@+id/languageAnouncer"/>

            <Spinner
                style="@style/inputfieldSpinner"
                android:layout_toRightOf="@+id/languageAnouncer"
                android:id="@+id/languageSpinner"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputfield_p1"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinnerContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter name player 1">
        </TextView>

        <RelativeLayout
            style="@style/inputfieldContainer"
            android:layout_height="wrap_content">

            <Spinner
                style="@style/inputfieldSpinner"
                android:id="@+id/spinnerP1Settings"/>

            <EditText
                style="@style/inputfieldEditText"
                android:id="@+id/usernameInputP1Settings"
                android:text="P1"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputfield_p2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/inputfield_p1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter name player 2">
        </TextView>

        <RelativeLayout
            style="@style/inputfieldContainer"
            android:layout_height="wrap_content">

            <Spinner
                style="@style/inputfieldSpinner"
                android:id="@+id/spinnerP2Settings"/>

            <EditText
                style="@style/inputfieldEditText"
                android:id="@+id/usernameInputP2Settings"
                android:text="P2"/>

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearEverything"
        android:layout_below="@+id/inputfield_p2"
        android:text="Delte usernames \n and highscores"
        android:onClick="clearSharedPreferences"/>



</RelativeLayout>
