<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".startup_screen">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/start_button">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:onClick="startGame"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputfield_p1"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/start_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter name player 1">
        </TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="P1"
            android:id="@+id/username_input_p1_startupscreen">
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputfield_p2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/inputfield_p1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter name player 2">
        </TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="P2"
            android:id="@+id/username_input_p2_startupscreen">
        </EditText>
    </LinearLayout>



</RelativeLayout>
