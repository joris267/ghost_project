<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="word_text_gamescreen" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TransparentTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="inputfieldContainer">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="inputfieldSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="inputfieldEditText">
        <item name = "android:layout_width">150dp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:inputType">text</item>
        <item name = "android:background">@color/white</item>
    </style>

</resources>
